<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/common_padding_right"
        android:paddingStart="@dimen/common_padding_left"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tv_head_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本周排行"
            android:textColor="@color/head_title_text"
            android:textSize="@dimen/head_title_text"
            android:textStyle="bold" />

        <!--判断是否有actionUrl来显示-->
        <ImageView
            android:id="@+id/iv_head_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_next" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp">

        <View
            android:id="@+id/view_footer_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/common_padding_left"
            android:layout_marginEnd="10dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_footer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看本周热门排行"
                android:textColor="#1e1e1e"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_footer_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@mipmap/ic_next" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>